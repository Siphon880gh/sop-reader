{
  "name": "mdmindmap",
  "version": "1.0.0",
  "description": "A markdown document viewer with dynamic file listing",
  "main": "index.html",
  "scripts": {
    "build": "node scripts/generateFileList.js",
    "dev": "npm run build && python3 -m http.server 8000 --bind 127.0.0.1",
