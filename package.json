  "keywords": [
    "markdown",
    "viewer",
    "static-site"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chokidar": "^3.5.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
